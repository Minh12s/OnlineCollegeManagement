@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}
<div class="contain1">
    <div class="title-top">
        <p>Home / Account</p>
    </div>
    <div class="sidebar">

        <div class="username">Account of 
            <strong>@Context.Session.GetString("Username")</strong>
            </div>
       
        <ul>
            <li>
                <div class="menu">
                    <i class="fas fa-shopping-cart"></i>
                    <a href="/MyTranscript/MyTranscript">My Transcript</a>
                </div>
            </li>

            <li>
                <div class="menu">
                    <i class="fas fa-key" style="color:#167ce9;"></i>
                    <a href="/MyOrder/ChangePassword" style="color: #167ce9;" class="li1">Change password</a>
                </div>
            </li>

            <li>
                <div class="menu">
                    <i class="fas fa-user-circle"></i>
                    <a href="/MyTranscript/MyTimetable">My Timetable</a>
                </div>
            </li>


        </ul>
    </div>
    <div class="content">
        <div style="border-bottom: 1px solid #DDE1EF;" class="content-top">
            <p style="color: black">Change password (For account security, please do not share your password with others)</p>
        </div>
        <form asp-controller="MyAccount" asp-action="ChangePassword" method="post" class="form1">
            <div class="mb-3">
                <label for="current_password" class="form-label">Current password</label>
                <input style="width:400px" type="password" name="current_password" class="form-control" id="current_password" required>

            </div>
            <div class="mb-3">
                <label for="new_password" class="form-label">New password</label>
                <input style="width:400px" type="password" name="new_password" class="form-control" id="new_password" required>

            </div>
            <div class="mb-3">
                <label for="new_password_confirmation" class="form-label">Confirm password</label>
                <input style="width:400px" type="password" name="new_password_confirmation" class="form-control" id="new_password_confirmation" required>

            </div>
            <button type="submit" class="btn btn-primary py-3 px-5">Submit</button>
        </form>


    </div>
</div>


