@{
    ViewData["Title"] = "EditCourse";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="is-title-bar">
    <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
        <ul>
            <li>List of products</li>
            <li>Add Product</li>
        </ul>

    </div>
</section>
<section class="section main-section">
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <h3 class="tile-title">Add product</h3>
                <div class="tile-body">
                    <form class="edit-product-form" action="addProduct" method="post" enctype="multipart/form-data">
                        <!-- Thay thế Tag Helper asp-for bằng các giá trị cụ thể -->

                        <div class="form-group col-md-3">
                            <label class="control-label">Product Name</label>
                            <input class="form-control" name="ProductName" type="text" />
                        </div>

                        <!-- Các trường khác của sản phẩm -->

                        <div class="form-group col-md-3">
                            <label for="CategoryId" class="control-label">Category</label>
                            <select class="form-control" name="CategoryId">
                                <option value="">-- Chọn danh mục --</option>
                                <!-- Thêm các tùy chọn danh mục tại đây -->
                            </select>
                        </div>

                        <div class="form-group col-md-3">
                            <label class="control-label">Price</label>
                            <input class="form-control" name="Price" />
                        </div>

                        <div class="form-group col-md-3">
                            <label class="control-label">Quantity</label>
                            <input class="form-control" name="Qty" />
                        </div>

                        <div class="form-group col-md-12">
                            <label class="control-label">Thumbnail</label>
                            <div>
                                <input type="file" name="Thumbnail" class="form-control" onchange="displayThumbnail(this);" />
                                <img id="thumbnailImage" alt="Thumbnail image" style="display: none; max-width: 50%;" />
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label class="control-label">Description</label>
                            <textarea class="form-control" name="Description"></textarea>
                            <!-- Thay thế script CKEditor bằng dữ liệu cứng nếu cần -->
                        </div>

                        <button class="btn btn-save" type="submit">Save</button>
                        <a class="btn btn-cancel" href="/Admin/Product">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
