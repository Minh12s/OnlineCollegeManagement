@model OnlineCollegeManagement.Models.OfficialStudentClasses

@{
    ViewData["Title"] = "AdmissionsDetail";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .row {
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-right: 15px;
        margin-left: 15px;
    }

    .col-lg-4 {
        -webkit-box-flex: 0;
        -ms-flex: 0 0 33.3333333333%;
        flex: 0 0 33.3333333333%;
        max-width: 33.3333333333%;
</style>
<style>
    .btn-primary {
        color: rgb(245 157 57);
        background-color: rgb(251 226 197);
        border-color: none;
        /* border-top-left-radius: 10px !important; */
        /* border-bottom-right-radius: 10px !important; */
        border-radius: .357rem;
        border: none;
        font-weight: 600;
        padding: 5px 20px; /* Điều chỉnh kích thước theo ý muốn */
    }

    .page-link {
        padding: 5px 10px; /* Có thể điều chỉnh kích thước của nút */
        border: 1px solid #ccc; /* Thêm đường viền */
        border-radius: 3px; /* Bo tròn góc */
        margin-right: 5px; /* Khoảng cách giữa các nút */
        text-decoration: none; /* Loại bỏ gạch chân mặc định */
        color: #333; /* Màu chữ */
    }

        .page-link:hover {
            background-color: #f0f0f0; /* Màu nền khi hover */
        }
</style>



<section class="section main-section">
    <div class="container">
        <div class="row order_d_inner">
            @if (Model != null)
            {
                <div class="order_details_table">
                    <h2>Admissions Details</h2>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="width:100px;" scope="col">ID</th>
                                    <th style="width:200px;" scope="col">Student Name</th>
                                    <th style="width:200px;" scope="col">Date of Birth</th>
                                    <th style="width:200px;" scope="col">Gender</th>
                                    <th style="width:200px;" scope="col">Current Address</th>
                                    <th style="width:200px;" scope="col">Email</th>
                                    <th style="width:200px;" scope="col">Student Code</th>
                                    <th style="width:200px;" scope="col">Telephone</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Id</td>
                                    <td>@Model.OfficialStudent.StudentInformation.StudentName</td>
                                    <td>@Model.OfficialStudent.StudentInformation.DateOfBirth.ToString("yyyy-MM-dd")</td>
                                    <td>@Model.OfficialStudent.StudentInformation.Gender</td>
                                    <td>@Model.OfficialStudent.StudentInformation.CurrentAddress</td>
                                    <td>@Model.OfficialStudent.User.Email</td>
                                    <td>@Model.OfficialStudent.StudentCode</td>
                                    <td>@Model.OfficialStudent.Telephone</td>
                                    
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <p>No admissions information available.</p>
            }
        </div>
    </div>
</section>

<div>
    <!-- Thêm input hidden để chứa giá trị returnUrl -->
    <input type="hidden" id="returnUrl" name="returnUrl" value="@Url.Action("ViewStudents", "Classes")" />

    <div style="float:right; margin-top: 10px; display: flex; gap: 10px;">
        @if (Model.StudentStatus == "Studying")
        {
            <!-- Hiển thị các nút "Complete", "Reserve", "Rest" -->
            <div>
                <form method="post" action="@Url.Action("UpdateStatus", "Classes", new { id = Model.Id })">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@Url.Action("ViewStudents", "Classes", new { classesId = ViewBag.ClassesId })" />

                    <!-- Nút "Complete" -->
                    <button onclick="return confirm('Surely you want to update the status to:  Complete')" type="submit" name="studentStatus" value="Complete" class="btn btn-success"
                     style="padding: 5px 10px; border-radius: 5px; margin-right: 10px; background-color: green; color: white;">Complete</button>

                    <!-- Nút "Reserve" -->
                    <button onclick="return confirm('Surely you want to update the status to:  Reserve')" type="submit" name="studentStatus" value="Reserve" class="btn btn-primary"
                     style="padding: 5px 10px; border-radius: 5px; margin-right: 10px; background-color: orange; color: white;">Reserve</button>

                    <!-- Nút "Rest" -->
                    <button onclick="return confirm('Surely you want to update the status to:  Rest')" type="submit" name="studentStatus" value="Rest" class="btn btn-warning"
                     style="padding: 5px 10px; border-radius: 5px; margin-right: 10px; background-color: red; color: white;">Rest</button>
                </form>
            </div>
        }
        else
        {
            <!-- Hiển thị nút "Back" -->
            <div style="float:right; margin-top: 10px;">
                <a style="padding: 5px 10px; border-radius: 5px; margin-right: 10px; background-color: black; color: white; " href="@Url.Action("ViewStudents", "Classes", new { classesId = ViewBag.ClassesId })" class="btn btn-warning">Back</a>
            </div>
        }
    </div>
</div>